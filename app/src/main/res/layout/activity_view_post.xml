<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightGrey"
    tools:context=".trading.ViewPostActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.theophrast.ui.widget.SquareImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/add_watch_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save post"
                    android:textColor="@color/White"
                    android:layout_below="@+id/add_watch_list"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/save_post"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/post_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="20dp"
                android:elevation="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_image"
                android:background="@color/lightGrey">

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:padding="10dp"
                    android:text="some title"
                    android:textColor="@color/Black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/post_title"
                    android:id="@+id/relLayout1"
                    android:background="@color/White"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/post_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="some description about the post"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/post_price"
                        android:textColor="@color/Black"
                        android:text="$20.99"
                        android:layout_below="@+id/post_description"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/post_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_price"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:text="Vancouver, British Columbia, Canada"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relLayout1"
                    android:background="@color/White"
                    android:layout_marginTop="10dp"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/post_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_background"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="contact seller"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>


